{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SmartVerses",
  "version": "0.7.1",
  "identifier": "com.smartverses.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SmartVerses",
        "width": 1200,
        "height": 800,
        "minWidth": 1000,
        "devtools": true,
        "resizable": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-eval' https://*.firebaseio.com https://*.firebaseapp.com https://*.googleapis.com https://cdn.jsdelivr.net https://unpkg.com; style-src 'self' 'unsafe-inline' https://unpkg.com; connect-src 'self' https: http: ws: wss: ipc: ipc://localhost http://localhost:* http://127.0.0.1:* ws://localhost:* ws://127.0.0.1:* https://*.firebaseio.com wss://*.firebaseio.com https://*.firebasedatabase.app wss://*.firebasedatabase.app https://cdn.jsdelivr.net; img-src 'self' data: blob: asset: https://asset.localhost; media-src 'self' asset: https://asset.localhost blob:;"
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true,
    "macOS": {
      "entitlements": "entitlements.plist",
      "exceptionDomain": null,
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "minimumSystemVersion": "11.0"
    },
    "iOS": {
      "developmentTeam": null
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEUxMzhCRkUxNDIwQTYxQzgKUldUSVlRcEM0Yjg0NFpzQXo4cG9xN3ErUGlpMUtPNDNiTWsyL21Peld1V0VmdUs3UEc1TmpRR3AK",
      "endpoints": [
        "https://github.com/crownemmanuel/SmartVerses/releases/latest/download/latest.json"
      ]
    }
  }
}
